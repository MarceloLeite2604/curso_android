<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/framelayout_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.InputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittext_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_edittext_numero" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_salvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/label_button_salvar" />

            <Button
                android:id="@+id/button_listar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/label_button_listar" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
