<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout_green"
    android:name="com.example.sala01.aula4exercicio2.GreenFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0f0"
        android:orientation="vertical"
        tools:context="com.example.sala01.aula4exercicio2.GreenFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_green" />

        <Button
            android:id="@+id/button_abrir_fragment_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_abrir_fragment_green" />

    </LinearLayout>
</FrameLayout>