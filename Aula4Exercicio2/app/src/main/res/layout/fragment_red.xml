<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout_red"
    android:name="com.example.sala01.aula4exercicio2.RedFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f00"
        android:orientation="vertical"
        tools:context="com.example.sala01.aula4exercicio2.RedFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_red" />

        <Button
            android:id="@+id/button_abrir_fragment_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_button_abrir_fragment_red" />

    </LinearLayout>
</FrameLayout>